{
  "permissions": {
    "allow": [
      "Read",
      "Bash(tree:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(cd:*)",
      "Web Search",
      "Bash(npm run lint)"
    ],
    "deny": [
      "Read(./.env*)",
      "Bash(rm -rf :*)",
      "Bash(npm publish)"
    ],
    "defaultMode": "plan"
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "prompt-improver@severity1-marketplace": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  }
}
