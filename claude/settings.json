      "Bash(git blame:*)",
      "Bash(cd:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(cat:*)",
      "Web Search",
      "Bash(npm install:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build:*)",
      "Bash(npm outdated:*)",
      "Bash(npx:*)",
